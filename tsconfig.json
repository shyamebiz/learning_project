{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "inlineSourceMap": true,
      "lib": [
          "es6",
          "dom",
          "esnext"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "noLib": false,
      "outDir": "./dist/src",
      "skipLibCheck": true,
      "baseUrl": "./",
      "paths": {
          "@root/*": [
              "./*"
          ],
          "@app/*": [
              "./src/*"
          ],
          "@layer/*": [
              "./src/layer/*"
          ],
          "@services/*": [
              "./src/common/*"
          ],
          "@util/*": [
              "./src/common/utility/*"
          ],
          "@entity/*": [
              "./src/entity/*"
          ],
          "@rest/*": [
              "./src/common/rest/*"
          ],
          "@test/*": [
              "./__tests__/*"
          ],
          "@mock/*": [
              "./__mocks__/*"
          ],
          "@environment/*": [
              "./src/environments/*"
          ],
          "*": [
              "node_modules/*"
          ]
      },
      "removeComments": true,
      "resolveJsonModule": true,
      "rootDir": "./src",
      "target": "es6"
  },
  "exclude": [
      "node_modules"
  ],
  "include": [
      "src/**/*.ts",
      "src/common/rest/ssl/*.key"
  ]
}